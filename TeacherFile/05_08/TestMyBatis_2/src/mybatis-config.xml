<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
   
   <!-- load db.properties in here -->  
   <properties resource="db.properties"></properties>
   
   <!-- after we configure this part, in mapper xml, we can omit package name -->
   <typeAliases>
      <package name="com.neuedu.model.po"/>
   </typeAliases>

  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
   <!--  <mapper resource="com/neuedu/model/mapper/DeptMapper.xml"/> -->
     <package name="com.neuedu.model.mapper"/>
  </mappers> 
</configuration>